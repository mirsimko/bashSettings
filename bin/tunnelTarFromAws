#!/bin/bash

toTar="$1"
ServerAddress=$2
location=${3:-Tokyo}
userName=${4:-ec2-user}

case "$location" in
  Tokyo)
    keyPair=miroEC2Tokyo.pem
    ;;
  Osaka)
    keyPair=miroEC2Osaka.pem
    ;;
  Frankfurt)
    keyPair=miroAwsEC2.pem
    ;;
  *)
    echo $keyPair is not valid location
    exit 2
    ;;
esac

ssh -i ~/MEGAsync/ioLabs/ML/pytorch/aws/$keyPair $userName@$ServerAddress 'tar czf - "'$toTar'"' | tar xzf -
