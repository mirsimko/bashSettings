#!/bin/bash

toTar="$1"
ServerAddress=$2
location=${3:-Tokyo}

case "$location" in
  Tokyo)
    keyPair=miroEC2Tokyo.pem
    ;;
  Osaka)
    keyPair=miroEC2Osaka.pem
    ;;
  Frankfurt)
    keyPair=miroAwsEC2.pem
    ;;
  *)
    echo $keyPair is not valid location
    exit 2
    ;;
esac

tar czf - "$toTar" | ssh -i ~/MEGAsync/ioLabs/ML/pytorch/aws/$keyPair ubuntu@$ServerAddress 'tar xzf -'
