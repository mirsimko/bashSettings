#!/bin/bash

ServerAddress=$1
location=${2:-Tokyo}
userName=${3:-ec2-user}

case "$location" in

  Tokyo)
    keyPair=miroEC2Tokyo.pem
    ;;
  Osaka)
    keyPair=miroEC2Osaka.pem
    ;;
  Frankfurt)
    keyPair=miroAwsEC2.pem
    ;;
  *)
    echo $keyPair is not valid location
    exit 2
    ;;
esac

echo ssh -A -Y -i ~/aws/$keyPair $userName@$ServerAddress
ssh -A -Y -i ~/aws/$keyPair $userName@$ServerAddress
